<h1>List of all directors</h1>

<form action="/insert_director_record" method="post">
  <div>
    <label for="name_field">Name</label>
    <input id="name_field" type="text" name="the_name">
  </div>

  <div>
    <label for="dob_field">Dob</label>
    <input id="dob_field" type="text" name="the_dob">
  </div>

  <div>
    <label for="bio_field">Bio</label>
    <input id="bio_field" type="text" name="the_bio">
  </div>

  <div>
    <label for="image_field">Image</label>
    <input id="image_field" type="text" name="the_image">
  </div>

  <button>Create director</button>
</form>

<hr>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Name</th>
      <th>Dob</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @list_of_directors.each do |a_director| %>
      <tr>
        <td><%= a_director.id %></td>
        <td>
          <img src="<%= a_director.image %>" style="width:250px;">
        </td>
        <td><%= a_director.name %></td>
        <td><%= a_director.dob %></td>
        <td>
          <a href="/directors/<%= a_director.id %>">
            Show details
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
